{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["ES2022"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "examples", "src/**/*.test.ts"]
}
